<% layout('layouts/boilerplate') %>

<div class="container justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4 ">
            <div class="card shadow">
                <img src="/images/photo.jpg" alt="" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form
                        action="/users/login"
                        method="POST"
                        class="d-flex flex-column needs-validation"
                        novalidate
                    >
                        <div class="form-floating mb-3">
                            <input
                                type="text"
                                class="form-control"
                                id="username"
                                placeholder="username"
                                name="username"
                                autofocus
                                required
                            />
                            <label for="username" class="form-label"
                                >Username</label
                            >
                        </div>
                        <div class="form-floating mb-3">
                            <input
                                type="password"
                                class="form-control"
                                id="exampleInputPassword1"
                                placeholder="password"
                                name="password"
                                required
                            />
                            <label
                                for="exampleInputPassword1"
                                class="form-label"
                                >Password</label
                            >
                        </div>
                        <button
                            type="submit"
                            class="btn btn-primary justify-content-center "
                        >
                            Login
                        </button>
                    </form>
                    <p class="d-flex justify-content-center">You don't have an account?<a class="ms-1"
                href="/users/register">register</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
