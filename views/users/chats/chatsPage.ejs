<% layout('layouts/boilerplate') %>

	<section class="container d-flex flex-row my-2">
		<section class="container col-md-4">
			<% for( let user of users ) { %>
				<div class="card mb-3 chat_card" onclick="onUserSelected(this.innerText)">
					<div class="row g-0">
						<div class="col-md-3">
							<img src="../images/yuriy-mlcn-3MORfl6x1Yg-unsplash.jpg" alt="..." class="img-fluid rounded-circle m-3">
						</div>
						<div class="col-md-9">
							<div class="card-body">
								<h5 class="card-title"><%= user.username %></h5>
							</div>
						</div>
					</div>
				</div>
				<% } %>
		</section>
		<section class="container col-md-8">
			<div class="container d-grid gap-2 my-auto" id="messages"></div>
			<div class="container">
				<form action="" id="form">
					<div class="d-flex flex-row">
						<input type="text" class="form-control" id="input" />
						<button class="btn btn-primary">Send</button>
					</div>
				</form>
			</div>
		</section>
	</section>

	<script src="/socket.io/socket.io.js"></script>
	<script src="/js/client.js"></script>