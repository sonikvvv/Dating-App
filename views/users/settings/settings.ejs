<% layout('layouts/boilerplate') %>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Filter</h5>
        <ul class="list-group list-group-flush">
            <% if (filter.sex && filter.sex !="" ) { %>
                <li class="list-group-item">Sex:
                    <%= filter.sex %>
                        <% } else { %>
                <li class="list-group-item text-muted">Sex:
                    <% } %>
                </li>

            <% if (filter.user_orientation && filter.user_orientation != "") { %>
                <li class="list-group-item">Orientation:
                <%= filter.user_orientation %>
            <% } else { %>
                <li class="list-group-item text-muted">Orientation:
            <% } %> 
            </li>

            <% if (filter.years.years_to && filter.years.years_from) { %>
                <li class="list-group-item">Years:
                <%= filter.years.years_from %> to <%= filter.years.years_to %>
            <% } else { %>
                <li class="list-group-item text-muted">Years:
            <% } %> 
            </li>

            <% if (filter.relationshipStatus && filter.relationshipStatus != "") { %>
                <li class="list-group-item">Relationship Status:
                <%= filter.relationshipStatus %>
            <% } else { %>
                <li class="list-group-item text-muted">Relationship Status:
            <% } %> 
            </li>

            <% if (filter.bodyType && filter.bodyType != "") { %>
                <li class="list-group-item">Body Type:
                <%= filter.bodyType %>
            <% } else { %>
                <li class="list-group-item text-muted">Body Type:
            <% } %> 
            </li>
        </ul>
        <a href="/users/settings/edit" class="btn btn-primary mt-2">Edit</a>
    </div>
</div>