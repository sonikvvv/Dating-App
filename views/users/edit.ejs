<% layout('layouts/boilerplate') %>

<section class="container">
    <h2>Edit user</h2>
    <form
        action="/users/<%= user._id %>?_method=PUT"
        method="POST"
        class="needs-validation"
        novalidate
    >
        <section class="d-flex flex-column">
            <div class="form-floating">
                <input
                    type="text"
                    class="form-control mb-3"
                    name="user[username]"
                    id="user-fname"
                    value="<%= user.username %>"
                    required
                />
                <label for="user-fname">Username</label>
            </div>

            <div class="form-floating">
                <input
                    type="email"
                    class="form-control mb-3"
                    name="user[email]"
                    id="email"
                    placeholder="email"
                    value="<%= user.email %>"
                    required
                />
                <label for="email">Email</label>
            </div>

            <div class="form-floating">
                <input
                    type="password"
                    class="form-control mb-3"
                    placeholder="password"
                    name="user[password]"
                    id="password"
                    value="<%= user.password %>"
                    required
                />
                <label for="password">Password</label>
            </div>

            <div class="form-floating">
                <input
                    type="text"
                    class="form-control mb-3"
                    placeholder="images"
                    name="user[images]"
                    id="images"
                    value="<%= user.images %>"
                />
                <label for="images">Images</label>
            </div>

            <div class="form-floating">
                <input
                    type="text"
                    class="form-control mb-3"
                    placeholder="years"
                    id="years"
                    name="user[years]"
                    value="<%= user.years %>"
                    required
                />
                <label for="years" class="form-label">Years</label>
            </div>

            <div class="form-floating">
                <select name="user[sex]" id="sex" class="form-select mb-3">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Transgender">Transgender</option>
                    <option value="Two-Spirit">Two-Spirit</option>
                    <option value="Cisgender">Cisgender</option>
                    <option value="Non-Binary">Non-Binary</option>
                    <option value="Genderqueer">Genderqueer</option>
                    <option value="Gender fluid">Gender fluid</option>
                    <option value="Gender neutral">"Gender neutral</option>
                </select>
                <label for="sex">Sex</label>
            </div>

            <div class="form-floating">
                <input
                    type="text"
                    class="form-control mb-3"
                    placeholder="work"
                    name="user[work]"
                    id="work"
                    value="<%= user.work %>"
                />
                <label for="work">Work</label>
            </div>

            <div class="form-floating">
                <select
                    name="user[orientation]"
                    id="orientation"
                    class="form-select mb-3"
                >
                    <option value="Lesbian">Lesbian</option>
                    <option value="Bisexual">Bisexual</option>
                    <option value="Pansexual">Pansexual</option>
                    <option value="Gay">Gay</option>
                    <option value="Asexual">Asexual</option>
                    <option value="Allosexual">Allosexual</option>
                    <option value="Heterosexual">Heterosexual</option>
                    <option value="Homosexual">Homosexual</option>
                    <option value="Monosexual">Monosexual</option>
                    <option value="Polysexual">Polysexual</option>
                    <option value="Queer">Queer</option>
                </select>
                <label for="orientation">Orientation</label>
            </div>

            <div class="form-floating">
                <textarea
                    name="user[description]"
                    class="form-control mb-3"
                    placeholder="description"
                    id="description"
                    cols="30"
                    rows="2"
                >
<%= user.description %></textarea
                >
                <label for="description">Description</label>
            </div>

            <div class="form-floating">
                <select
                    name="user[position]"
                    class="form-select mb-3"
                    id="position"
                >
                    <option value="Bottom">Bottom</option>
                    <option value="Top">Top</option>
                    <option value="Versalite">Versalite</option>
                    <option value="Vers Bottom">Vers Bottom</option>
                    <option value="Vers Top">Vers Top</option>
                </select>
                <label for="position">Position</label>
            </div>

            <label for="height" class="form-label">Height</label>
            <input
                type="range"
                class="form-range mb-3"
                min="130"
                max="250"
                id="height"
                name="user[height]"
                value="<%= user.height %>"
            />

            <label for="weight" class="form-label">Weight</label>
            <input
                type="range"
                class="form-range mb-3"
                min="30"
                max="150"
                id="weight"
                name="user[weight]"
                value="<%= user.weight %>"
            />

            <div class="form-floating">
                <select
                    name="user[bodyType]"
                    class="form-select mb-3"
                    id="bodyType"
                >
                    <option value="Average">Average</option>
                    <option value="Large">Large</option>
                    <option value="Muscular">Muscular</option>
                    <option value="Slim">Slim</option>
                    <option value="Stocky">Stocky</option>
                    <option value="Toned">Toned</option>
                </select>
                <label for="bodyType">Body Type</label>
            </div>

            <div class="form-floating">
                <select
                    name="user[relationshipStatus]"
                    class="form-select mb-3"
                    id="relationshipStatus"
                >
                    <option value="Commited">Commited</option>
                    <option value="Dating">Dating</option>
                    <option value="Engaged">Engaged</option>
                    <option value="Exclusive">Exclusive</option>
                    <option value="Married">Married</option>
                    <option value="Open Relationship">Open Relationship</option>
                    <option value="Partnered">Partnered</option>
                    <option value="Single">Single</option>
                </select>
                <label for="relationshipStatus">Relationship Status</label>
            </div>

            <div class="form-floating">
                <select name="user[nsfw]" class="form-select mb-3" id="nsfw">
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
                <label for="nsfw">NSFW</label>
            </div>
        </section>

        <button type="submit" class="btn btn-success">Save</button>
    </form>
    <a href="/users">ALL</a>
</section>
