<% layout('layouts/boilerplate') %>

    <section class="container">
        <h2>Edit Tag</h2>
        <form action="/tags/<%= tag._id %>?_method=PUT" method="post" class="needs-validation" novalidate>
            <div class="form-floating mb-3">
                <input type="text" name="tag[title]" class="form-control" id="tag-name" value="<%= tag.title %>" placeholder="title" required>
                <label for="tag-name">Title</label>
            </div>
            <button class="btn btn-success">Save</button>
        </form>
        <a href="/tags">ALL</a>
    </section>